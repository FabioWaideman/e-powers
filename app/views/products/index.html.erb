<h1>e-Powers</h1>
<p class="icon">Become the super you!</p>

<%= form_with url: products_path, method: :get, class: "d-flex" do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find a Superpower"
  %>
  <%= submit_tag "Search", class: "btn btn-danger" %>
<% end %>

<div class="d-flex m-3">
  <% @products.each do |product| %>
  <div class="card m-2 border-danger" style="width: 15rem;">
    <%# <img src="..." class="card-img-top" alt="..."> %>
    <div class="card-body text-center">
      <h5 class="card-title text-danger info"><%= link_to product.title, product_path(product), class: "text-danger" %></h5>
      <p class="card-text"><%= product.description %></p>
      <%= link_to product_path(product), class: "btn btn-danger btn-sm" do %>
        <button type="button" class="btn btn-danger btn-sm">View details</button>
      <% end %>
    </div>
  </div>
  <% end %>
</div>
