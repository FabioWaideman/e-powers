<h1>SuperPower</h1>
<%= link_to "Back", products_path %>

<div class="card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title"><%= @product.title %></h5>
    <h6 class="card-subtitle mb-2 text-muted"><%= @product.category %></h6>
    <p class="card-text"><%= @product.description %></p>
    <p class="card-text"><small>Created by</small><%= @product.user.username %></p>
    <%= link_to "Buy this Power", new_product_order_path(@product) %>
    <%= link_to "Edit", edit_product_path %>
    <%= link_to "Delete", product_path(@product), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
  </div>
</div>
